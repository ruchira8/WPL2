extends layout
block append content
    .container-fluid
        .row
            .col-md-4.col-md-offset-4
                //button.btn.btn-warning.custom-button-width(type='button', class='.navbar-right') I have an account
                //button.btn.btn-danger.custom-button-width(type='button', class='.navbar-right') Guest user
                .btn-toolbar
                    button#btnSubmit.btn.btn-primary.btn-sm(type='button') I have an account
