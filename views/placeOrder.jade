extends layout

block append content
    .group
        section
            .image-wrapper
                img(src='/images/peperoni.jpg')


        aside
            form
                h4 Quantity
                .form-group
                    select.form-control
                        option(value='0', selected='') 1
                        option(value='1') 2
                        option(value='2') 3
                        option(value='2') 4
                        option(value='2') 5
                        option(value='2') 6
                        option(value='2') 7
                        option(value='2') 8
                        option(value='2') 9
                        option(value='2') 10

                h4 Size
                .form-group
                    select.form-control
                        option(value='0', selected='') Small
                        option(value='1') Medium
                        option(value='2') Large

                h4 Crust
                    .form-group
                        select.form-control
                            option(value='Handmade Pan Pizza Crust', selected='') Handmade Pan Pizza Crust
                            option(value='Hand Tossed Pizza Crust') Hand Tossed Pizza Crust
                            option(value='Crunchy Thin Pizza Crust') Crunchy Thin Pizza Crust
                            option(value='Brooklyn Style Pizza Crust') Brooklyn Style Pizza Crust
                            option(value='Gluten Free Pizza Crust') Gluten Free Pizza Crust

                h4 Toppings
                    .form-group
                        select.form-control
                            option(value='Pepperoni', selected='') Pepperoni
                            option(value='Pepperoni') Pepperoni
                            option(value='Mushrooms') Mushrooms
                            option(value='Onions') Onions
                            option(value='Sausage') Sausage
                            option(value='Bacon') Bacon
                            option(value='Tomato') Tomato
                            option(value='Jalapeno') Jalapeno
                            option(value='Black Olives') Black olives
                            option(value='Pineapple') Pineapple
                            option(value='Spinach') Spinach

                h4 Type
                    .form-group
                        select.form-control
                            option(value='Pizza', selected='') Pizza
                            option(value='Pizza') Pizza
                            option(value='Drink') Drink
                            option(value='Desert') Desert
                            option(value='Desert') Breadsticks



                h4 Type
                    .form-group
                        select.form-control
                            option(value='Pizza', selected='') Pizza
                            option(value='Pizza') Pizza
                            option(value='Drink') Drink
                            option(value='Desert') Desert
                            option(value='Desert') Breadsticks

                h4 Cheese
                    .form-group
                        select.form-control
                            option(value='Cheese', selected='') Cheese
                            option(value='Cheese') Cheese
                            option(value='No cheese') No Cheese

                .action_btns
                    .one_half
                        a#pickup.btn.btn_red(href='#Submit') Submit
                            i.fa.fa-angle-double-left
                    .one_half.last
                        a#delivery.btn.btn_red(href='#Reset') Reset


