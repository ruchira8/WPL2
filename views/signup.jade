extends layout

block content
    .container
        .col-sm-6.col-sm-offset-3
            div(ng-contoller='SignupCtrl as signup')
                h1
                    span.fa.fa-sign-in
                    |  Signup
                // LOGIN FORM
                form(action='/signup', method='post')
                    .form-group
                        label Username
                        input.form-control(ng-model='signup.userName', type='text', name='userName')
                    .form-group
                        label Password
                        input.form-control(ng-model='signup.password', type='password', name='password')
                    .form-group
                        label Email
                        input.form-control(ng-model='signup.email', type='email', name='email')
                    .form-group
                        label Name
                        input.form-control(ng-model='signup.name', type='text', name='name')
                    .form-group
                        label Address
                        input.form-control(ng-model='signup.address', type='text', name='address')
                    .form-group
                        label Phone number
                        input.form-control(ng-model='signup.phNo', type='text', name='phNo')
                    .form-group
                        label Zipcode
                        input.form-control(ng-model='signup.zipCode', type='text', name='zipCode')
                    button.btn.btn-warning.btn-lg(ng-click='app.signupUser(signup.userName, signup.password,signup.email,signup.name,signup.address,signup.phNo,signup.zipCode)', type='submit') Signup
                hr
                p
                    | Already have an account?
                    a(href='/login') Login
                p
                    | Or go
                    a(href='/') home
                    | .
